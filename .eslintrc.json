{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "no-underscore-dangle": [
      "error",
      {
        "enforceInMethodNames": false,
        "allowAfterThis": true
      }
    ]
  }
}
