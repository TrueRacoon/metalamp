include ../../components/header/header
include ../../components/footer/footer

block variables
doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    )
    meta(
      name='description'
      content=description,
    )
    meta(
      name='keywords'
      content=keywords
    )
    title #{title}
  body
    .website-pages
      header.website-pages__header
        +header()
      main.website-pages__main
        block content
      footer(
        class=`website-pages__footer${needTopBorder ?
          ' website-pages__footer_has-top-border' : ''}`
      )
        +footer()
