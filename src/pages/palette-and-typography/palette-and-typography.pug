extends ../ui-kit/ui-kit.pug
include ../../components/palette-item/palette-item.pug
include ../../components/typography-item/typography-item.pug

block variables
  -
    var title = 'Colors & Type'
    var description = 'Color & Type Description'
    var keywords = 'Color & Type Keywords'
    var palette = [
      {
        'color_modifier': 'dark-shade',
        'name': 'Dark Shade 100%',
        'hex': '#1F2041',
      },
      {
        'color_modifier': 'dark-shade-75',
        'name': 'Dark Shade 75%',
        'hex': '#1F2041',
      },
      {
        'color_modifier': 'dark-shade-50',
        'name': 'Dark Shade 50%',
        'hex': '#1F2041',
      },
      {
        'color_modifier': 'dark-shade-25',
        'name': 'Dark Shade 25%',
        'hex': '#1F2041',
      },
      {
        'color_modifier': 'dark-shade-5',
        'name': 'Dark Shade 5%',
        'hex': '#1F2041',
      },
      {
        'color_modifier': 'purple',
        'name': 'Purple',
        'hex': '#BC9CFF',
      },
      {
        'color_modifier': 'green',
        'name': 'Green',
        'hex': '#6FCF97',
      },
    ];
    var typographyData = [
      {
        tagSize: 'largest',
        tagText: 'H1',
        descriptionTag: 'h1',
        descriptionText: 'This one is the sub-section or widget title',
      },
      {
        tagSize: 'larger',
        tagText: 'H2',
        descriptionTag: 'h2',
        descriptionText: 'Next one is the item title inside widgets',
      },
      {
        tagSize: 'small',
        tagText: 'H3',
        descriptionTag: 'h3',
        descriptionText: 'This is a label or CTA text',
      },
      {
        tagSize: 'medium',
        tagText: 'Body',
        descriptionTag: 'body',
        descriptionText: 'This is the body text which is used for most of ' +
                'the design, like paragraphs, lists, etc.'
      },
    ];

block content
  .palette-and-typography
    ul.palette
      each val in palette
        li
          .palette-item__positioning
            +palette-item(
              val.color_modifier,
              val.name,
              val.hex
            )
    ul.typography
      each val in typographyData
        li
          .typography-item__positioning
            +typography-item(
              val.tagSize,
              val.tagText,
              val.descriptionTag,
              val.descriptionText,
            )
