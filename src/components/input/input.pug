mixin input(opts)
  -
    var hasButton = opts.withSubmitButton || opts.withDropdownButton;
    var initialValue = opts.initialValue || '';
    var classes = 'input js-input' + (hasButton ? ' input_hasButton' : '');

  .input__container
    input(
      class=classes
      name=opts.name
      placeholder=opts.placeholder
      type=opts.type
      value=initialValue
    )
    if opts.withSubmitButton
      button(
        class='input__button'
        class='input__button_type_submit'
        type='submit'
      )
    if opts.withDropdownButton
      button(
        class='input__button'
        class='input__button_type_dropdown'
        class='js-input__button_type_dropdown'
        type='button'
      )

