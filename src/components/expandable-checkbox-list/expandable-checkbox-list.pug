include ../../components/text/text.pug
include ../../components/checkbox-buttons/checkbox-buttons.pug

mixin expandable-checkbox-list(props)
  -
    var {
      items = [],
      label = '',
    } = props || {};

  .expandable-checkbox-list.js-expandable-checkbox-list
    .expandable-checkbox-list__dropdown
      +text({
        tag: 'h3',
        text: label,
      })
      .expandable-checkbox-list__dropdown-button.js-expandable-checkbox-list__dropdown-button
    .expandable-checkbox-list__dropdown-content.js-expandable-checkbox-list__dropdown-content
      +checkbox-buttons({
        items,
        name: label,
      })
