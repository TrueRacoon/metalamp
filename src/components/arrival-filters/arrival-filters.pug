include ../date-filter/date-filter.pug
include ../count-picker/count-picker.pug

mixin arrival-filters()
  -
    var guestPickerItems = [
      { label: 'Взрослые', count: 0 },
      { label: 'Дети', count: 0 },
      { label: 'Младенцы', count: 0 }
    ];

  .arrival-filters
    form
      fieldset.arrival-filters__fieldset
        legend.arrival-filters__legend
          +text({
            text: 'Найдём номера под ваши пожелания',
            tag: 'h1',
          })
        .arrival-filters__date-filter-container
          +date-filter({
            arrivalLabel: 'Прибытие',
            departureLabel: 'Выезд',
            separateDates: true,
          })
        +count-picker({
          label: 'Гости',
          inputText: 'Сколько гостей',
          withControlButtons: true,
          items: guestPickerItems,
        })
      button.arrival-filters__submit-button(
        type='submit'
      )='Подобрать номер'
