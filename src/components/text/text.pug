mixin text(opts)
  -
    var text = opts.text || '';
    var additionalClasses = opts.classes || [];
    var classes = `text text_tag_${opts.tag}`;
    additionalClasses.forEach((className) => {
      classes += ' ' + className;
    });
    opts.modifiers?.forEach((modifier) => {
      classes += ` text_${modifier}`
    })

  #{opts.tag}(class=classes)= opts.text
