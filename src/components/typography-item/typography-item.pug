include ../text/text.pug

mixin typography-item(props)
  -
    var {
      descriptionTag = '',
      descriptionText = '',
      tagSize = '',
      tagText = '',
    } = props || {};

  section.typography-item
    .typography-item__tag(
      class=`typography-item__tag_size_${tagSize}`
    )= tagText
    +text({
      tag: descriptionTag,
      text: descriptionText,
    })
