include ../input/input.pug
include ../dropdown-block/dropdown-block.pug
include ../calendar/calendar.pug

mixin date-filter(props)
  -
    var {
      arrivalLabel = '',
      dateFilterLabel = '',
      departureLabel = '',
      initialArrivalDate = '',
      initialDepartureDate = '',
      singleDateInput = false,
    } = props || {};

  div(
    class=`date-filter${singleDateInput ? ' date-filter_single-date-input' : ''}`
    class='js-date-filter'
  )
    if singleDateInput
      +dropdown-block({
        initialArrivalDate,
        initialDepartureDate,
        label: dateFilterLabel,
        isContentAreExtension: false,
      })
    else
      div(
        class='date-filter__arrival'
        class='js-date-filter__arrival'
      )
        .date-filter__label
          +text({
            tag: 'h3',
            text: arrivalLabel
          })
        +input({
          name: 'arrival-date',
          placeholder: 'ДД.ММ.ГГГГ',
          type: 'text',
          withDropdownButton: true,
          initialValue: initialArrivalDate,
        })
      div(
        class='date-filter__departure'
        class='js-date-filter__departure'
      )
        .date-filter__label
          +text({
            tag: 'h3',
            text: departureLabel
          })
        +input({
          name: 'departure-date',
          placeholder: 'ДД.ММ.ГГГГ',
          type: 'text',
          withDropdownButton: true,
          initialValue: initialDepartureDate,
        })
    div(
      class=`date-filter__calendar-container${singleDateInput ? ' ' +
        'date-filter__calendar-container_offset_small' : ''}`
      class='js-date-filter__calendar-container'
    )
      +calendar()



