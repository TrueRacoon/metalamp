mixin range-slider(opts)
  .range-slider
    .range-slider__details
      .range-slider__name Name
      .range-slider__range-label.js-range-slider__range-label(
        data-min-value=opts.minValue
        data-max-value=opts.maxValue
        data-initial-lower-value=opts.initialLowerValue
        data-initial-upper-value=opts.initialUpperValue
      )
    .range-slider__view
      input.range-slider__input.range-slider__input_lower.js-range-slider__input_lower(
        type='range'
        step=opts.step || 1
      )
      input.range-slider__input.range-slider__input_upper.js-range-slider__input_upper(
        type='range'
        step=opts.step || 1
      )
      .range-slider__range-view
