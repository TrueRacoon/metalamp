mixin carousel(props)
  -
    var {
      roomNumber = 0,
    } = props || {};

  .carousel
    // Must contain N(= number of slides) different values
    - var slides = [1, 2, 3, 4]
    each val in slides
      input.carousel__activator(
        checked = val === slides[0]
        id = `${roomNumber}${val}`
        name = `${roomNumber}carousel`
        type = 'radio'
      )
    each val, index in slides
      .carousel__controls
        label.carousel__control(
          class = 'carousel__control_backward'
          for = `${roomNumber}${(index === 0) ? slides[slides.length - 1] : slides[index - 1]}`
        )
        label.carousel__control(
          class = 'carousel__control_forward'
          for = `${roomNumber}${(index === slides.length - 1) ? slides[0] : slides[index + 1]}`
        )
    .carousel__track
      each _, i in slides
        li.carousel__slide
          img.carousel__img(
            alt = 'Фотография номера'
            src = require(`../../img/rooms/room-${roomNumber}-${1}.jpg`)
          )
    .carousel__indicators
      each val in slides
        label.carousel__indicator(
          for = `${roomNumber}${val}`
        )
