mixin room-number-and-price(props)
  -
    var {
      isRoomDetailsBlock = false,
      roomNumber = 0,
      roomSpecialType = '',
    } = props || {};

    function formatSum(sum) {
      return sum.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1\xa0').concat('₽');
    }

    var price = props.price ? formatSum(props.price) : '';

  .room-number-and-price
    a(
      class = `${isRoomDetailsBlock ? '' : 'room-number-and-price__link'}`
      href = isRoomDetailsBlock ? null : 'room-details.html'
    )
      | №
      |
      span.room-number-and-price__room-number(
        class = `${isRoomDetailsBlock ? 'room-number-and-price__room-number_bigger-font' : ''}`
      )= roomNumber
      |
      |
      span.room-number-and-price__room-special-type= roomSpecialType
    span.room-number-and-price__price
      span.room-number-and-price__price-value.js-room-number-and-price__price-value= price
      |
      |
      span.room-number-and-price__price-period в сутки
